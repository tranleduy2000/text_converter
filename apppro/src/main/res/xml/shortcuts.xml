<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
        android:shortcutId="open_floating_codec"
        android:shortcutLongLabel="@string/open_floating_codec"
        android:shortcutShortLabel="@string/floating_codec">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.duy.text.converter.floating.codec.FloatingCodecOpenShortCutActivity"
            android:targetPackage="com.duy.text_converter.pro" />

        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
        android:shortcutId="open_floating_stylish"
        android:shortcutLongLabel="@string/open_floating_codec"
        android:shortcutShortLabel="@string/floating_codec">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.duy.text.converter.floating.stylish.FloatingStylishOpenShortCutActivity"
            android:targetPackage="com.duy.text_converter.pro" />

        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>